{
  "info": {
    "name": "CaseFinx API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Coleção Postman para testar os endpoints do projeto CaseFinx",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Paciente - Criar",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"João Silva\",\n  \"cpf\": \"12345678900\",\n  \"dataNascimento\": \"1990-01-01\",\n  \"contato\": \"(11) 99999-9999\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pacientes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pacientes"]
        }
      }
    },
    {
      "name": "Paciente - Listar",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/pacientes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pacientes"]
        }
      }
    },
    {
      "name": "Paciente - Atualizar",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nome\": \"João Atualizado\",\n  \"cpf\": \"12345678900\",\n  \"dataNascimento\": \"1990-01-01\",\n  \"contato\": \"(11) 99999-8888\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/pacientes/{{pacienteId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pacientes", "{{pacienteId}}"]
        }
      }
    },
    {
      "name": "Paciente - Deletar",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/pacientes/{{pacienteId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "pacientes", "{{pacienteId}}"]
        }
      }
    },
    {
      "name": "Histórico Médico - Criar",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"diagnosticos\": \"Hipertensão\",\n  \"examesRealizados\": \"Hemograma\",\n  \"prescricoes\": \"Medicamento X\",\n  \"pacienteId\": \"{{pacienteId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/historicos",
          "host": ["{{baseUrl}}"],
          "path": ["api", "historicos"]
        }
      }
    },
    {
      "name": "Exames Externos - Consultar",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/exames-externos/{{cpf}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "exames-externos", "{{cpf}}"]
        }
      }
    },
    {
      "name": "Unificar Pacientes - Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/admin/unificar-pacientes",
          "host": ["{{baseUrl}}"],
          "path": ["api", "admin", "unificar-pacientes"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" },
    { "key": "pacienteId", "value": "" },
    { "key": "cpf", "value": "" }
  ]
}
